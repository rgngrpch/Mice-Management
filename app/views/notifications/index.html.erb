<h1 style="color:red;" align = "middle">Welcome To Mickey</h1>
<% if current_user.admin? %>

<h1>Listing Notifications</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<h3>Pending Notifications</h3>
  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
       <% if notification.status != 1 %> 
        <td><%= notification.description %></td>
        <td><%= notification.status %></td>
        <td><%= link_to 'Destroy', notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <h3>Actioned Notifications</h3>
  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
       <% if notification.status == 1 %> 
        <td><%= notification.description %></td>
        <td><%= notification.status %></td>
        <td><%= link_to 'Destroy', notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notification', new_notification_path %>
<%= link_to 'Back to Main Page', '/' %>

<% else %>

<p style="color:blue;" align = "middle"> You are not authorized to visit this page. God knows how did you even get here. Please click the link below to go back. Thank you! </p>

<%= link_to 'Back to Main Page', '/' %>

<% end %>
